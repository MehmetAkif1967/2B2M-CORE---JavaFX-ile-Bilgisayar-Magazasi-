<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550" prefWidth="400" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="application.register_con">
    <VBox alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" spacing="15" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="30.0">
        
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #0d47a1;" text="2B2M CORE" />
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Kayıt Ol" />
        
        <TextField fx:id="nameField" maxWidth="300" promptText="Ad Soyad" />
        <TextField fx:id="emailField" maxWidth="300" promptText="E-Posta" />
        <PasswordField fx:id="passwordField" maxWidth="300" promptText="Şifre" />
        
        <ComboBox fx:id="gender" maxWidth="300" promptText="Cinsiyet" />
        

        <CheckBox fx:id="consentCheckBox" maxWidth="300" text="2B2M CORE'un tarafıma e-posta ile ticari elektronik ileti göndermesine izin veriyorum." wrapText="true" />
		
		<Label fx:id="errorLabel" textFill="red" visible="false" />
        <Button maxWidth="300" onAction="#handleRegister" style="-fx-background-color: #0d47a1; -fx-text-fill: white; -fx-font-weight: bold;" text="Üyeliği Tamamla" />
    </VBox>
</AnchorPane>
